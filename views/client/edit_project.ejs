<%- include('header') %>

<!-- main content start-->
<div id="page-wrapper">
    <div class="blank-page widget-shadow scroll">
        <h2 style="text-align: center"><b>Edit Your Project</b></h2>
        <div class="row">
            <br>
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="project_name" class="col-sm-2 control-label">Project Topic</label>
                    <div class="col-sm-8">
                        <textarea id="project_name" rows="1" class="form-control form-control" ><%=proposal.Topic%></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="project_content" class="col-sm-2 control-label">Content</label>
                    <div class="col-sm-8">
                        <textarea id="project_content" class="form-control" rows="6" ><%=proposal.Content%></textarea>
                    </div>
                </div>
                <div style="text-align: center">
                    <a href="/project">
                        <button type="button" class="btn btn-primary">SUBMIT</button>
                    </a>

                </div>
            </form>

        </div>
    </div>
</div>

<%- include('footer') %>
