<%- include('header') %>

<!-- main content start-->
<div id="page-wrapper">
    <% if(stage.Stage!=0){%>
    <div class="blank-page widget-shadow scroll">
        <h2><b>My Teams</b></h2>
        <%if(teams.length!=0){%>
        <%for(let i = 0; i< teams.length; i++){%>
        <div class="grid_3 grid_5 widget-shadow">
            <a href="/client/myteam/teampage?id=<%=teams[i]._id%>">
                <div>
                    <h3><b>SSIT Team <%=teams[i].TeamName%></b></h3>
                </div>
                <div>
                    <table width="100%">
                        <tr>
                            <td width="40%"><p><b>Supervisor:</b> <%=teams[i].StaffID.Name%><span><i class="fa fa-angle-right" style="float:right;font-size: 35px"/></span></p></td>
                        </tr>
                        <td width="20em">
                            <p>
                                <b>Student:</b>
                                <%let students = teams[i].StudentID;%>
                                <%= students[0].Name %>
                                <% for (let j = 1; j < students.length; j++) { %>
                                    <%= ' / ' + students[j].Name %>
                                <% } %>
                            </p>
                        </td>
                    </table>
                </div>
            </a>
        </div>
        <%}} else{%>
        <br>
            <div class="alert alert-danger" role="alert">You do not have a team currently!</div>
        <%}%>
    </div>
    <%}else{%>
        <div class="alert alert-danger" role="alert">This page only valid in stage 1 and stage 2. You are in stage 0.</div>
    <%}%>
</div>

<%- include('footer') %>

<%- include('script')%>
