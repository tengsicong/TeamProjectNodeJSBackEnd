<%- include('header') %>

<!-- main content start-->
<div id="page-wrapper">
    <div class="blank-page widget-shadow scroll">
        <h2 style="text-align: center"><b>Create New Project</b></h2>
        <div class="row">
            <br>
            <form class="form-horizontal" method="post">
                <div class="form-group">
                    <label for="project_name" class="col-sm-2 control-label">Project Topic</label>
                    <div class="col-sm-8 field required">
                        <textarea name="topic" rows="1" class="form-control form-control" placeholder="Enter your project topic"></textarea>
                    </div>
                </div>
                <div class="form-group field required">
                    <label for="project_content" class="col-sm-2 control-label">Content</label>
                    <div class="col-sm-8">
                        <textarea name="content" class="form-control" rows="6" placeholder="Enter your detailed description of this project" ></textarea>
                    </div>
                </div>
                <div style="text-align: center">
                    <input type="submit" class="btn btn-primary" value=" SUBMIT">
                </div>


            </form>
        </div>
    </div>
</div>

<%- include('footer') %>
