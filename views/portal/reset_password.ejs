<%- include('header') %>

<!-- main content start-->
<div id="page-wrapper">
	<div class="main-page signup-page">
		<h2 class="title1">Reset Password</h2>
		<div class="sign-up-row widget-shadow">
			<form action="reset_password" method="post">
				<div class="sign-u">
					<input type="password" name="currentpw" placeholder="Current Password" required="">
					<div class="clearfix"> </div>
				</div>
				<div class="sign-u">
					<input type="password" name="newpw" placeholder="New Password" required="">
					<div class="clearfix"> </div>
				</div>
				<div class="sign-u">
                    <input type="password" name="confirmednewpw" placeholder="Confirm New Password" required="">
                    <div class="clearfix"> </div>
				</div>
				<div class="sub_home">
					<input type="submit" value="Submit">
					<div class="clearfix"> </div>
				</div>
			</form>
		</div>
	</div>
</div>

<%- include('footer') %>
