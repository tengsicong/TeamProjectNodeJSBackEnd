<%- include('header') %>

<!-- main content start-->
<div id="page-wrapper">
    <div class="blank-page widget-shadow scroll">
        <h2><b><%=proposal.Topic%></b><span class="label label-danger"
                                         style="float:right;font-size:15px">Rejected</span></h2>
        <br>
        <div class="row">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Detail / content / Description</h3>
                </div>
                <div class="panel-body" data-example-id="embedded-scrollspy">
                    <div data-spy="scroll" data-target="#navbar-example2"
                         class="scrollspy-example scroll scrollbar1">
                        <p><%=proposal.Content%></p>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <table width="100%">
            <tr class="row">
                <td width="95%">
                    <a href="/client/edit_project?id=<%=proposal._id%>">
                        <button type="button" class="btn btn-primary" style="float: right">Edit</button>
                    </a>
                </td>
                <td>
                    <button type="button" class="btn btn-danger" data-dismiss="modal" style="float: right">Delete
                    </button>
                </td>
            </tr>
        </table>
    </div>

    <br>
    <div class="blank-page widget-shadow scroll">
        <h2 class="title1"><b>Comments</b></h2>

        <% if(Replies.length!=0){%>
        <div class="bs-example widget-shadow" data-example-id="contextual-table" style="height:300px;overflow-y:auto;">
            <table class="table">
                <tbody>
                <%if(Replies.length==1){%>
                <tr class="active">
                    <th scope="row"><b><%=Replies[0].Author%></b></th>
                    <td width="85%"><b><%=Replies[0].Comment%></b></td>
                    <td width="10%"><%=Replies[0].ReplyDate%></td>
                </tr>
                <%}else{%>
                <%for(let i=0;i<Replies.length;i+2){%>
                <tr class="active">
                    <th scope="row"><b><%=Replies[i].Author%></b></th>
                    <td width="85%"><b><%=Replies[i].Comment%></b></td>
                    <td width="10%"><%=Replies[i].ReplyDate%></td>
                </tr>
                <tr>
                    <td><b><%=Replies[i+1].Author%></b></td>
                    <td><%=Replies[i+1].Comment%></td>
                    <td width="10%"><%=Replies[i+1].ReplyDate%></td>
                </tr>
                <%}}%>
                </tbody>
            </table>
        </div>
        <%} else{%>
        <div class="alert alert-danger" role="alert">No comment yet!</div>
        <%}%>
        <br>

        <div class="row">
            <br>
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="project_name" class="col-sm-2 control-label">Make a comment</label>
                    <div class="col-sm-8">
                        <textarea id="project_name" rows="6" class="form-control form-control"></textarea>
                    </div>
                </div>
            </form>
            <div style="text-align: center">
                <a href="client_project_rejected.html">
                    <button type="button" class="btn btn-primary">SUBMIT</button>
                </a>

            </div>
        </div>
    </div>

</div>

<%- include('footer') %>
