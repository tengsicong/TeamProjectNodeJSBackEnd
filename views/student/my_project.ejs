<%- include('component/header') %>

    <!-- main content start-->

    <div id="page-wrapper">
        <div class="main-page">
            <h2 class="title1">My Project</h2>
            <div class="blank-page widget-shadow scroll">
                <h2><b><%= proposal.Topic%></b></h2>
                <br>
                <table width="100%">
                    <tr>
                        <td width="30%"><P><%= 'Client : ' + proposal.ClientID.Name %></P></td>
                        <td width="30%"><p><%= 'Supervisor : ' + proposal.GroupID[0].StaffID.Name%></p></td>
                    </tr>
                </table>
                <br>
<!--                <div class="col-md-12 panel-grids">-->
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h3 class="panel-title"> Panel Info</h3>
                        </div>
                        <div class="panel-body">
                            <%= proposal.Content %>
                        </div>
                    </div>
<!--                </div>-->
            </div>
        </div>
        <br>
        <div class="blank-page widget-shadow scroll">
            <h2><b>Meeting List</b></h2>
            <br>
            <div class="panel panel-info">
                <!-- Default panel contents -->
                <div class="panel-heading"><b>Client Meeting</b></div>
                <div class="panel-body">
                    During this module, you need to regular meeting with your client and gathering requirement by
                        interview your client. For each meeting detail, please see the table below!
                </div>
                <!-- Table -->
                <table class="table">
                    <tr>
                        <th></th>
                        <th>Time</th>
                        <th>Place</th>

                    </tr>
                    <% for (let i = 0; i < team.ClientMeetingID.length; i++) { %>
                    <tr>
                        <th>Client Meeting <%=' ' + (i+1) %></th>
                        <td><%= team.ClientMeetingID[i].Date.toISOString().replace(/T.*/,' ')+team.ClientMeetingID[i].Date.toLocaleTimeString().replace(/ G.*/,"")%></td>
                        <td><%= team.ClientMeetingID[i].Place %></td>
                    </tr>
                    <% } %>
                </table>
            </div>

            <br>
            <div class="panel panel-info">
                <!-- Default panel contents -->
                <div class="panel-heading"><b>Supervisor Meeting</b></div>
                <div class="panel-body">
                    <p>During this module, you need to regular meeting with your supervisor and report your progress.
                        For each meeting detail, please see the table below!</p>
                </div>
                <!-- Table -->
                <table class="table">
                    <tr>
                        <th></th>
                        <th>Time</th>
                        <th>Place</th>
                        <th>Supervisor</th>
                    </tr>
                    <% for (let i = 0; i < team.StaffMeetingID.length; i++) {%>
                    <tr>
                        <th>Supervisor Meeting <% ' ' + (i+1)%></th>
                        <td><%= team.StaffMeetingID[i].Date.toISOString().replace(/T.*/,' ')+team.StaffMeetingID[i].Date.toLocaleTimeString().replace(/ G.*/,"")%></td>
                        <td><%= team.StaffMeetingID[i].Place %></td>
                        <td>
                            <% if (team.StaffMeetingID[i].TemporaryStaffID != undefined) {%>
                                <%= team.StaffMeetingID[i].TemporaryStaffID.Name %>
                            <% } else { %>
                                    <%= team.StaffID.Name %>
                            <% } %>
                        </td>
                    </tr>
                    <% } %>
                </table>
            </div>
        </div>

    </div>


<%- include('component/footer') %>
