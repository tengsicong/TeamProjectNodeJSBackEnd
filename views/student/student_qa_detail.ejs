<%- include('component/header') %>


<!-- main content start-->

<div id="page-wrapper">
    <div class="main-page">
        <div class="blank-page widget-shadow scroll">
            <h2><b><%=qa.Topic%></b></h2>
            <br><br>
            <% for (let i = 0; i < qa.Replies.length; i++) { %>
            <div class="reply-panel widget-shadow scroll">
                <h4 class="reply-user"><b>#<%=i+1%></b><span><%= ' ' + qa.Replies[i].Author %></span></h4>
                <br>
                <p class="reply-content"><%=qa.Replies[i].Comment%></p>
                <br>
                <p style="color:gray; font-weight:bold"> Post Time: <%= qa.Replies[0].ReplyDate.toISOString().replace(/T.*/,' ')+qa.Replies[0].ReplyDate.toLocaleTimeString().replace(/ G.*/,"")%></p>
            </div>
            <% } %>
            <br><br>
            <textarea class= "reply-area" placeholder="Your Reply" wrap="virtual"></textarea>
            <br><br>
            <button type="submit" class="btn btn-primary sub-reply" style="align-content: center">Submit</button>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>

<%- include('component/footer') %>




