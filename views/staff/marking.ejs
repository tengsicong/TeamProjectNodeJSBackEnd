<%- include('header') %>

<!-- main content start-->
<div id="page-wrapper">

    <div class="blank-page widget-shadow scroll" >
        <h2 style="text-align: center"><b>Marking - SSIT Team <%= team.TeamName%></b></h2>
        <div class="row" >
            <form class="form-horizontal" method="post">
            <% for(var i=0;i<8;i++) {%>
            <br>
                <div class="form-group" >
                    <label for="selector<%=i%>" class="col-sm-2 control-label">Mark Item <%=i+1%></label>
                    <div class="col-sm-8">
                        <p>Description of Mark Item <%=i+1%></p>
                        <br>
                        <select name="selector1" id="selector1" class="form-control-project" style="width: 100%">
                            <% for(var j=0;j<5;j++) { %>
                                <%if(team.StaffMark[i] != j+1){%>
                                    <option value="<%=j+1%>"><%= j+1%></option>
                                <% } else {%>
                                    <option value="<%=j+1%>"selected><%= j+1%></option>
                                <% } %>
                            <% } %>
                        </select>
                        <p>&nbsp</p>
                        <textarea name="t1" id="t1" style="width: 100%; resize: none" rows="3" placeholder="Enter your reason"> <%=team.StaffMarkReason[i]%> </textarea>
                    </div>
                </div>
                <br>
                <% } %>

            <div style="text-align: center">
                <input type="submit" class="btn btn-primary" value=" SUBMIT">
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>
